# Database Configuration
# Connection string for PostgreSQL database
DATABASE_URL=postgresql://user:password@postgres:5432/smart_logger

# CORS Configuration
# Comma-separated list of allowed origins for API requests
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:80

# Frontend API URL
# URL the frontend uses to connect to the API (used during build)
VITE_API_URL=http://localhost:8000/api

# Debug Mode
# Set to True for development, False for production
DEBUG=False

# PostgreSQL Credentials (used by docker-compose)
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=smart_logger

# Optional: Add your own overrides below
# Example:
# POSTGRES_HOST=db
# POSTGRES_PORT=5432
